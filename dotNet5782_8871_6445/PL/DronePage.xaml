<Page x:Class="PL.DronePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DronePage">

    <Grid Background="#c9cba3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <TextBlock x:Name="PrintIDblock"        Text="Drone ID:"        Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintModelBlock"     Text="Model name:"      Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintWeightBlock"    Text="Max weight:"      Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintBatteryBlock"   Text="Battery:"         Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintStatusBlock"    Text="Status:"          Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintParcelBlock"    Text="Parcel carry:"    Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintLocationBlock"  Text="Location:"        Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="PrintStationIDBlock" Text="Station ID:"      Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <TextBlock x:Name="IDBlock"         Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="ModelBlock"      Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="WeightBlock"     Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="BatteryBlock"    Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="StatusBlock"     Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="ParcelBlock"     Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" />
            <TextBlock x:Name="LocationBlock"   Margin="0,10" FontSize="25" VerticalAlignment="Center" HorizontalAlignment= "Left" Grid.ColumnSpan="2"/>
        </StackPanel>
        <StackPanel x:Name="NewDroneEnterPanel" Grid.Row="2" Grid.Column="2">
            <TextBox   x:Name="EnterDroneIDBox"   Margin="0,10" Height="35" Width="200" FontSize="25" TextWrapping="Wrap" TextChanged="EnterDroneIDBox_TextChanged" />
            <TextBox   x:Name="EnterModelNameBox" Margin="0,10" Height="35" Width="200" FontSize="25" TextWrapping="Wrap" TextChanged="EnterModelNameBox_TextChanged" />
            <ComboBox  x:Name="StationSelector"  Margin="0,10" Height="35" Width="200" FontSize="25" SelectionChanged="StationSelector_SelectionChanged"/>
            <ComboBox  x:Name="WeightSelector"   Margin="0,10" Height="35" Width="200" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" SelectionChanged="WeightSelector_SelectionChanged" Background="Transparent" BorderBrush="Transparent"/>
        </StackPanel>
        <StackPanel x:Name="InvalidTextPanel" Grid.Row="2" Grid.Column="3">
            <TextBox   x:Name="UpdateNameBlock" Text="" Margin="0,10" TextWrapping="Wrap" Width="200" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35"/>
            <TextBlock x:Name="InvalidDroneIDBlock"  Grid.Column="3" Grid.Row="2" FontSize="15" VerticalAlignment="Top" HorizontalAlignment= "Left" Margin="15"
                   Text=" * please enter a valid number" Foreground="Red" TextWrapping="Wrap" Grid.RowSpan="2"/>
            <TextBlock x:Name="InvalidStationIDBlock"  Grid.Column="3" Grid.Row="5" FontSize="15" VerticalAlignment="Top" HorizontalAlignment= "Left" Margin="15"
                   Text=" * please enter a valid number" Foreground="Red" TextWrapping="Wrap" Grid.RowSpan="2"/>
            <TextBlock x:Name="InvalidBatteryToCompleteDeliveryBlock"  Grid.Column="3" Grid.Row="5" FontSize="15" VerticalAlignment="Top" HorizontalAlignment= "Left" Margin="15"
                   Text=" * please enter a valid number" Foreground="Red" TextWrapping="Wrap" Grid.RowSpan="2"/>
            <TextBlock x:Name="ExistsDroneIDBlock"  Grid.Column="3" Grid.Row="2" FontSize="15" VerticalAlignment="Top" HorizontalAlignment= "Left" Margin="15"
                   Foreground="Red" TextWrapping="Wrap" Grid.RowSpan="2"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="4">
            <Button x:Name="UpdateNameButton"   Grid.Column="4" Grid.Row="3" Content="Update name" Height="35" Width="150"
                Click="UpdateNameButton_Click" ClickMode="Release" />

            <Button x:Name="UpdateDroneToBeChargedButton"  Grid.Column="4" Grid.Row="4" Content="Send drone to be charged" Height="35" Width="150"
                Click="UpdateDroneToBeChargedButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" />

            <Button x:Name="UpdateReleaseDroneFromChargeButton"  Grid.Column="4" Grid.Row="5" Content="Release Drone from charge" Height="35" Width="150"
                Click="UpdateReleaseDroneFromChargeButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" />

            <Button x:Name="UpdateParcelAssignToDroneButton"  Grid.Column="4" Grid.Row="6" Content="Assign parcel to drone" Height="35" Width="150"
                Click="UpdateParcelAssignToDroneButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" />

            <Button x:Name="UpdateParcelCollectedByDroneButton"  Grid.Column="4" Grid.Row="7" Content="Parcel collected by drone" Height="35" Width="150"
                Click="UpdateParcelCollectedByDroneButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" />

            <Button x:Name="UpdateParcelDeleiveredByDroneButton"  Grid.Column="4" Grid.Row="8" Content="Parcel deliverd by drone" Height="35" Width="150"
                Click="UpdateParcelDeleiveredByDroneButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" />

            <Button x:Name="AddNewDroneButton"  Grid.Column="3" Grid.Row="7" Content="Add" Height="35" Width="150"
                Click="AddNewDroneButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" />

            <Button x:Name="Close"  Grid.Column="4" Grid.Row="9" Content="Close" Height="35" Width="150"
                Click="CloseButton_Click" ClickMode="Release" Margin="15,12,15,0" VerticalAlignment="Top" Background="red"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="4" Height="360" VerticalAlignment="Bottom">

        </StackPanel>


    </Grid>
</Page>
