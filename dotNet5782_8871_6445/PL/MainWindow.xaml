<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Main Window" Height="640" Width="950">
    <!--
    Colors:
    #c9cba3
    #ffe1a8
    #e26d5c
    #723d46
    #472d30
    -->
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/aaa.jpg"/>
        </Grid.Background>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="2" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="Drone Delivery" Grid.ColumnSpan="4" Foreground="#472d30" FontWeight="ExtraBold"/>
        <Button x:Name="ShowDrones" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Width="240"
                Click="StartButton_Click" ClickMode="Release" Grid.Column="2" Grid.Row="3" FontSize="42" FontWeight="Bold" Background="#ffe1a8" Foreground="#723d46"/>
        <Button x:Name="ShowMap" Content="Map" HorizontalAlignment="Right" VerticalAlignment="Center" Height="80" Width="240"
                Click="MapButton_Click" ClickMode="Release" Grid.Column="2" Grid.Row="3" FontSize="42" FontWeight="Bold" Background="#ffe1a8" Foreground="#723d46"/>
    </Grid>

</Window>
